<div>
  <div>
    <h1>
      Package #<%= @the_package.id %> details
    </h1>

    <div>
      <div>
        <a href="/packages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_package/<%= @the_package.id %>">
          Delete package
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_package.description %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @the_package.date %>
      </dd>

      <dt>
        Details
      </dt>
      <dd>
        <%= @the_package.details %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_package.status %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit package
    </h2>

    <form action="/modify_package/<%= @the_package.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_package.description %>">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="text" id="date_box" name="query_date" value="<%= @the_package.date %>">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <input type="text" id="details_box" name="query_details" value="<%= @the_package.details %>">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status" value="<%= @the_package.status %>">
      </div>

      <button>
        Update package
      </button>
    </form>
  </div>
</div>

<hr>
